{
  "extends": "@electron-toolkit/tsconfig/tsconfig.json",
  "include": [
    "src/preload/*.ts",
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.svelte",
    "src/common/**/*",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib/*": [
        "src/renderer/lib/*"
      ],
      "$type/*": [
        "./src/type/*"
      ],
      "$locale/*": [
        "./src/locale/*"
      ],
      "$magic-ui/*": [
        "src/renderer/lib/components/magic-ui/*"
      ],
      "$ui/*": [
        "src/renderer/lib/components/ui/*"
      ],
      "$animations": [
        "src/renderer/lib/components/animations"
      ],
      "$assets/*": [
        "./src/renderer/assets/*"
      ],
      "$components/*": [
        "./src/renderer/components/*"
      ],
      "$api/*": [
        "src/renderer/api/*"
      ],
      "$layout/*": [
        "src/renderer/layout/*"
      ],
      "$pages/*": [
        "src/renderer/pages/*"
      ],
      "$vars/*": [
        "src/renderer/vars/*"
      ],
      "$resources": [
        "resources"
      ]
    },
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    "useDefineForClassFields": true,
    "strict": false,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}